<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.LearnCustomView" parent="Base.Theme.LearnCustomView" />

    <!-- Base application theme. -->
    <style name="Base.Theme.LearnCustomView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_base_fill</item>
        <item name="colorPrimaryVariant">@color/dark_base_fill</item>
        <item name="colorOnPrimary">@color/dark_text_tertiary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_base_fill</item>
        <item name="colorSecondaryVariant">@color/dark_base_fill</item>
        <item name="colorOnSecondary">@color/light_text_tertiary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorBaseFill</item>
        <!-- Customize your theme here. -->

        <!-- Typography-->
        <item name="textAppearanceHeading1">@style/TextAppearance.Heading1</item>
        <item name="textAppearanceHeading2">@style/TextAppearance.Heading2</item>

        <!-- Color Attribute -->
        <item name="colorBase0">@color/lite_base_0</item>
        <item name="colorTextPrimary">@color/light_text_tertiary</item>
        <item name="colorBaseFill">@color/light_base_fill</item>
    </style>
</resources>